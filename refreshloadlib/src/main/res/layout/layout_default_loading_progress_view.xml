<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/loading_padding">

    <TextView
        android:id="@+id/text_view_loading_text"
        android:text="@string/do_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/primary_text_light"
        android:textSize="32sp" />

    <com.tuacy.refreshloadlib.view.loadingview.DefaultProgressLoadingView
        android:id="@+id/view_progress_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>